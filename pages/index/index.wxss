/**index.wxss**/
.swiper-container {
   width: 750rpx;
  position: relative;  
  background: red;
  margin-top: -100px;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
  background: red;
}  
.swiper-container .dots.dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #fff;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .5;
}  
.swiper_box {
  width: 100%;
  height:562.5rpx;
}
.list-container{
  width: 100%;
  margin-bottom: 0px;
  background: red;
  flex-direction: column;
  /* height: 1000px;  */
}
.nav-container{
  margin-top: 0px;
  width: 100%;
  background: red;
  height: 60px;
  display: flex;
  align-items:center;
}
.title-label{
  align-items: center;
  font-size: 20px;
  margin-left: 20px;
  background: green;
}

.card-container{
  width: 100%;
  height: 300px;
  background: gray;
  margin-top: 0px;
   /* position:relative; */
}
.card-container .card{
 margin-top: 0px;
 margin-left: auto;
 margin-right: auto;
 border-radius:6px;
 width: 90%;
 height: 98%;
 background: green;
 position:relative;  
}
.card-container .card .image{
  height: 100%;
  width: 100%;
  background: green;
  position:absolute; 
  margin-top:0px;
  border-top-left-radius: 6px;
  border-top-right-radius: 6px;
}

.card-container .card .title-container{
  height: 60px;
  width: 100%;
  background: red;
  position:absolute;
  bottom:0px;
  border-bottom-left-radius: 6px;
  border-bottom-right-radius: 6px;
  display: flex;
  align-items: center;
}

.card-container .card .title-container .text{
  align-items: center;
  font-size: 20px;
  margin-left: 20px;
  background: green;
}
